<p style="color: green"><%= notice %></p>

<div class="w-full px-10">
  <h3 class="text-2xl font-medium">Employee Details</h3>
  <div class="mt-4">
    <div class="flex flex-col sm:flex-row justify-between items-center sm:items-start py-3 border-t border-gray-300 last:border-none">
      <span class="w-full sm:w-1/3 font-medium text-center sm:text-left">Full name</span>
      <span class="flex-1 text-center sm:text-left"><%= @employee.name %></span>
    </div>
    <div class="flex flex-col sm:flex-row justify-between items-center sm:items-start py-3 border-t border-gray-300 last:border-none">
      <span class="w-full sm:w-1/3 font-medium text-center sm:text-left">Pis</span>
      <span class="flex-1 text-center sm:text-left"><%= @employee.pis %></span>
    </div>
    <div class="flex flex-col sm:flex-row justify-between items-center sm:items-start py-3 border-t border-gray-300 last:border-none">
      <span class="w-full sm:w-1/3 font-medium text-center sm:text-left">Admission Date</span>
      <span class="flex-1 text-center sm:text-left"><%= @employee.admission_date %></span>
    </div>
    <div class="flex flex-col sm:flex-row justify-between items-center sm:items-start py-3 border-t border-gray-300 last:border-none">
      <span class="w-full sm:w-1/3 font-medium text-center sm:text-left">Phone</span>
      <span class="flex-1 text-center sm:text-left"><%= @employee.phone %></span>
    </div>
    <div class="flex flex-col sm:flex-row justify-between items-center sm:items-start py-3 border-t border-gray-300 last:border-none">
      <span class="w-full sm:w-1/3 font-medium text-center sm:text-left">Job</span>
      <span class="flex-1 text-center sm:text-left"><%= @employee.job %></span>
    </div>
    <div class="flex flex-col sm:flex-row justify-between items-center sm:items-start py-3 border-t border-gray-300 last:border-none">
      <span class="w-full sm:w-1/3 font-medium text-center sm:text-left">Salary</span>
      <span class="flex-1 text-center sm:text-left"><%= number_to_currency(@employee.salary) %></span>
    </div>
  </div>
</div>


<div class="flex justify-center mt-2">
  <%= link_to "Edit this employee", edit_employee_path(@employee), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 mx-3 rounded" %>
  <%= link_to "Back to employees", employees_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 mx-4 rounded" %>

  <%= button_to "Destroy this employee", @employee, method: :delete, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 mx-4 rounded" %>
</div>
