<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= number_to_currency(product.price) %>
  </p>

  <p>
    <strong>Brand:</strong>
    <%= product.brand %>
  </p>

  <p>
    <strong>Sku:</strong>
    <%= product.sku %>
  </p>

  <% @product.storages.each do |storage| %>
    <p>
      <strong>Branch:</strong>
      <%= storage.branch.name %> (#<%= storage.branch_id %>) 

      <strong>Quantity:</strong>
      <%= storage.quantity %>
    </p>
  <% end %>
</div>
