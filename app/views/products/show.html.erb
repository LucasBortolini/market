<p style="color: green"><%= notice %></p>
<div class="w-full px-10">
  <h3 class="text-2xl font-medium">Product Details</h3>
  <div class="mt-4">
    <div class="flex flex-col sm:flex-row justify-between items-center sm:items-start py-3 border-t border-gray-300 last:border-none">
      <span class="w-full sm:w-1/3 font-medium text-center sm:text-left">Product name</span>
      <span class="flex-1 text-center sm:text-left"><%= @product.name %></span>
    </div>
    <div class="flex flex-col sm:flex-row justify-between items-center sm:items-start py-3 border-t border-gray-300 last:border-none">
      <span class="w-full sm:w-1/3 font-medium text-center sm:text-left">Brand</span>
      <span class="flex-1 text-center sm:text-left"><%= @product.brand %></span>
    </div>
    <div class="flex flex-col sm:flex-row justify-between items-center sm:items-start py-3 border-t border-gray-300 last:border-none">
      <span class="w-full sm:w-1/3 font-medium text-center sm:text-left">Sku</span>
      <span class="flex-1 text-center sm:text-left"><%= @product.sku %></span>
    </div>
    <div class="flex flex-col sm:flex-row justify-between items-center sm:items-start py-3 border-t border-gray-300 last:border-none">
      <span class="w-full sm:w-1/3 font-medium text-center sm:text-left">Price</span>
      <span class="flex-1 text-center sm:text-left"><%= number_to_currency(@product.price) %></span>
    </div>
    <div class="flex flex-col sm:flex-row justify-between items-center sm:items-start py-3 border-t border-gray-300">
      <span class="w-full sm:w-1/3 font-medium text-center sm:text-left">Total storage</span>
      <span class="flex-1 text-center sm:text-left"><%= @product.total_storage %></span>
    </div>
  </div>
</div>
<div class="flex justify-center">
  <%= link_to "Edit this product", edit_product_path(@product), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 mx-3 rounded" %>
  <%= link_to "Back to products", products_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 mx-3 rounded" %>

  <%= button_to "Destroy this product", @product, method: :delete, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 mx-3 rounded" %>
</div>
